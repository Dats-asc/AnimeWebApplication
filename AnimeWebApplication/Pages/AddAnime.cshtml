@page
@model AnimeWebApplication.Pages.AddAnime

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css"/>
    <title></title>
</head>
<body>
<div style="margin: 40px 0; padding: 20px">
    <form method="post" id="add-anime-form">
        <p class="h1 text-center">Add anime</p>
        <div class="container">
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                    <div class="row">
                        <label>Title:</label>
                        <input type="text" name="title" class="form-control"/>
                    </div>
                    <div class="row" style="margin: 20px 0">
                        <label>Description:</label>
                        <input type="text" name="description" class="form-control"/>
                    </div>
                    <div class="row" style="margin: 20px 0">
                        <button type="submit" id="submitAnime" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $('#submitAnime').click(function (){
            $.ajax({
                type: "POST",
                url: "/addanime?handler=AddAnime",
                data: $('#add-anime-form').serialize(),
                headers: {
                    "XSRF-TOKEN": $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                success: function() {
                    window.location.replace("/index");
                }
            });
        });
</script>
</body>
</html>